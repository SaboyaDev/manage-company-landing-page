---
import TestimonialCard from '../components/TestimonialCard.astro'
import testimonials from '../scripts/testimonials'
---

<swiper-container init='false' class='test mb-14 mt-24 h-80 overflow-visible'>
	{
		testimonials.map(testimonial => {
			const { img, name, comment } = testimonial
			return <TestimonialCard url={img} name={name} comment={comment} />
		})
	}
</swiper-container>

<script src='../scripts/swiper-init.js'></script>
