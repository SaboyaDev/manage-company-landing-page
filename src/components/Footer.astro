---
import CtaBtn from '../components/CtaBtn.astro'
import FacebookIcon from '../img/icon-facebook.svg'
import YouTubeIcon from '../img/icon-youtube.svg'
import TwitterIcon from '../img/icon-twitter.svg'
import PinterestIcon from '../img/icon-pinterest.svg'
import InstagramIcon from '../img/icon-instagram.svg'
import LogoWhite from '../img/logo-white.svg'
---

<footer class='bg-veryDarkBlue px-7 pb-7 xl:px-20'>
	<div
		class='container mx-auto flex flex-col space-y-8 py-20 md:flex-row-reverse'
	>
		<form class='flex space-x-3'>
			<input
				class='focus:shadow-outline w-full appearance-none rounded-full border px-6 py-4 leading-tight text-darkGrayishBlue shadow focus:outline-none'
				type='text'
				placeholder='Updates in your inbox...'
			/>
			<CtaBtn text='Go' class='main-btn shadow-none' />
		</form>
		<div class='flex font-extralight text-light'>
			<div class='w-1/2'>
				<div class='flex flex-col'>
					<a href='#'>Home</a>
					<a href='#'>Pricing</a>
					<a href='#'>Products</a>
					<a href='#'>About Us</a>
				</div>
			</div>
			<div class='w-1/2'></div>
			<div class='flex flex-col'>
				<a href='#'>Careers</a>
				<a href='#'>Community</a>
				<a href='#'>Privacy Policy</a>
			</div>
		</div>
	</div>
	<div class='flex flex-col md:flex-col-reverse'>
		<div class='flex justify-around'>
			<a href='#'><img src={FacebookIcon} alt='' srcset='' /></a>
			<a href='#'><img src={YouTubeIcon} alt='' srcset='' /></a>
			<a href='#'><img src={TwitterIcon} alt='' srcset='' /></a>
			<a href='#'><img src={PinterestIcon} alt='' srcset='' /></a>
			<a href='#'><img src={InstagramIcon} alt='' srcset='' /></a>
		</div>
		<div class='flex justify-center'>
			<img src={LogoWhite} alt='' />
		</div>
	</div>
	<div class='text-center'>
		<p class='font-sm font-extralight text-darkGrayishBlue'>
			Copyright &copy; 2020. All Rights Reserved
		</p>
	</div>
</footer>
